<h2><%=@survey.name%></h2>


  <form>
    <%@questions.each do |question|%>
      <%=question.content%>
      <br>
      <% question.answers.each do |answer| %>
          <input type="radio" name="<%=question.id%>" value="<%=answer.id%>"><%=answer.content%>
          <br>
      <% end %>
    <% end %>
    <input type="submit" value="Submit answers">
  </form>
